#include <iostream>

using namespace std;
int main()
{
    int foreven [10];
    
    cout<<"Please enter 10 even numbers";
    
    for (int i=0; i<10; i++)
    {
        cin>>foreven[i];
    }
    
    cout<<"\n The second element of the array is "<< foreven[1]; 
    
    cout<<"\n The fourth element of the array is "<< foreven[3];
    
    foreven[4] = foreven[1]*foreven[3];
    
    cout<<"\n The elements of array even is now: "<<endl;
    
    for (int a=0; a<10; a++)
    {
        cout<< foreven[a]<<endl;
    }
    return 0; 
}
